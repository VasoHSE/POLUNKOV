<Window x:Class="UserGraphShow.Painting"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:UserGraphShow"
        mc:Ignorable="d"
      ResizeMode="NoResize"
        Title="Painting"  MaxWidth="1000" MaxHeight="500" >
    <Grid >
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="75*"/>
            <ColumnDefinition Width="80*"/>
            <ColumnDefinition Width="102*"/>
            <ColumnDefinition Width="505*"/>
        </Grid.ColumnDefinitions>

        <Canvas Name="paintSurface" MouseDown="Canvas_MouseDown_1" MouseMove="Canvas_MouseMove_1" Grid.ColumnSpan="4" >
            <Canvas.Background>
                <SolidColorBrush Color="Black" Opacity="0" />
            </Canvas.Background>
        </Canvas>


