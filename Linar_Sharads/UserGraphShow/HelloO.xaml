<Window x:Class="UserGraphShow.HelloO"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:UserGraphShow"
        mc:Ignorable="d"
        WindowStartupLocation="CenterScreen" 
        Title="Linar sharades" Height="300" Width="400" MinHeight="200" MinWidth="200"
        Icon="Resourses/logo.jpg" >
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="65*"/>
            <RowDefinition Height="31*"/>
            <RowDefinition Height="8*"/>
            <RowDefinition Height="32*"/>
            <RowDefinition Height="33*"/>
        </Grid.RowDefinitions>
        <Image Grid.ColumnSpan="3"  Source="Resourses/Intro.jpg" Grid.RowSpan="5" Stretch="UniformToFill" />
        <Button x:Name="Start" Content="Start" Grid.Column="1" Margin="0,5" Click="Start_Click" Grid.Row="1"/>
        <Button x:Name="Info" Content="Info" Grid.Column="1" Margin="0,6" Grid.Row="3" Click="Info_Click"/>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="95*"/>
            <ColumnDefinition Width="106*"/>
            <ColumnDefinition Width="91*"/>
        </Grid.ColumnDefinitions>


    </Grid>
</Window>
