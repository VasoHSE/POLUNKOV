<Window x:Class="UserGraphDraw.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:UserGraphDraw"
        mc:Ignorable="d"
         ResizeMode="NoResize"
        Title="MainWindow" Height="350" Width="525">
    <Grid>
        <Canvas  Name="paintSurface" MouseDown="Canvas_MouseDown_1" MouseMove="Canvas_MouseMove_1" >
            <Canvas.Background>
                <SolidColorBrush Color="#463F3F" Opacity="0" />
            </Canvas.Background>


        </Canvas>
        <Button x:Name="button1" Content="Clear" Margin="156,5,0,0"  VerticalAlignment="Top" Width="74" Click="clearButton_Click"/>
        <Button x:Name="button" Content="OK" HorizontalAlignment="Left" Margin="156,5,0,0" VerticalAlignment="Top" Width="74" Click="button_Click_1"/>
    </Grid>
</Window>
